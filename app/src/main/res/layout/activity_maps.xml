<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"

            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_near_me_24" />


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <!-- 누르면 주변 가로등 팝업 -->
        <ImageButton
            android:id="@+id/LightBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_lightbulb_24" />

        <!-- 누르면 안심벨 울리기 -->
        <ImageButton
            android:id="@+id/BellBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_notifications_active_24" />

        <!-- 누르면 가까운 경찰서 목록 -->
        <ImageButton
            android:id="@+id/CallBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_call_24" />

        <!-- 누르면 본인 위치로 -->
        <ImageButton
            android:id="@+id/PoliceBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1.5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_baseline_local_police_24" />
    </LinearLayout>
</LinearLayout>